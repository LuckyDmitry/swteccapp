<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/item_watering_places__tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@id/item_watering_places__cb_left"
        app:layout_constraintStart_toEndOf="@id/item_watering_places__gl_secondVertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="fill_horizontal"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Backyard" />

    <RadioButton
        android:id="@+id/item_watering_places__rb_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/item_watering_places__cb_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_watering_places__gl_secondVertical"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_watering_places__gl_firstVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="190dp"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_watering_places__gl_secondVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="160dp"
        android:orientation="vertical"
        />

</androidx.constraintlayout.widget.ConstraintLayout>