<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/main_activity__placeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backyard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_activity__secondPlaceLeftGuideLine"
        app:layout_constraintBaseline_toBaselineOf="@id/main_activity__placeCheckBox"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"/>

    <CheckBox
        android:id="@+id/main_activity__placeCheckBox"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_activity__firstPlaceLeftGuideLine"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintEnd_toStartOf="@id/main_activity__secondPlaceLeftGuideLine" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_activity__firstPlaceLeftGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="160dp"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_activity__secondPlaceLeftGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="130dp"
        android:orientation="vertical"
        />

</androidx.constraintlayout.widget.ConstraintLayout>