<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/activity_weather__tv_centerDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Date" />

    <TextView
        android:id="@+id/activity_weather__tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/activity_weather__iv_weatherPicture"
        app:layout_constraintTop_toBottomOf="@+id/activity_weather__tv_centerDate"
        tools:text="SomeText" />


    <ImageView
        android:id="@+id/activity_weather__iv_weatherPicture"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_weather__tv_centerDate"
        tools:src="@drawable/cloudy" />





</androidx.constraintlayout.widget.ConstraintLayout>